<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found | Ryzo Bags</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'spin-slow': 'spin 10s linear infinite',
                        'spin-slower': 'spin 15s linear infinite',
                        'bounce-slow': 'bounce 3s infinite',
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 overflow-hidden relative">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Floating Circles -->
        <div class="absolute top-1/4 left-1/4 w-16 h-16 md:w-24 md:h-24 lg:w-32 lg:h-32 bg-gradient-to-r from-purple-200 to-pink-200 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute top-3/4 right-1/4 w-12 h-12 md:w-18 md:h-18 lg:w-24 lg:h-24 bg-gradient-to-r from-blue-200 to-purple-200 rounded-full opacity-20 animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute top-1/2 right-1/3 w-8 h-8 md:w-12 md:h-12 lg:w-16 lg:h-16 bg-gradient-to-r from-pink-200 to-yellow-200 rounded-full opacity-20 animate-pulse" style="animation-delay: 0.5s;"></div>
        <div class="absolute bottom-1/4 left-1/3 w-10 h-10 md:w-16 md:h-16 lg:w-20 lg:h-20 bg-gradient-to-r from-indigo-200 to-blue-200 rounded-full opacity-20 animate-pulse" style="animation-delay: 0.7s;"></div>

        <!-- Rotating Elements -->
        <div class="absolute top-1/3 right-1/2 animate-spin-slow">
            <div class="w-3 h-3 md:w-4 md:h-4 lg:w-6 lg:h-6 bg-purple-300 opacity-30 rounded-full"></div>
        </div>
        <div class="absolute bottom-1/3 left-1/2 animate-spin-slower">
            <div class="w-2 h-2 md:w-3 md:h-3 lg:w-4 lg:h-4 bg-pink-300 opacity-30 rounded-full"></div>
        </div>
    </div>

    <!-- Main Content Container -->
    <div class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-4xl w-full text-center">
            <!-- Brand Section -->
            <div class="mb-8 md:mb-12">
                <div class="flex items-center justify-center mb-6">
                    <div class="relative">
                        <!-- Shopping Bag Icon -->
                        <svg class="w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 text-indigo-600 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
                        </svg>
                        <div class="absolute -top-1 -right-1 w-4 h-4 md:w-6 md:h-6 bg-gradient-to-r from-pink-400 to-purple-400 rounded-full animate-ping"></div>
                    </div>
                </div>
                <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 tracking-wider mb-4">
                    RYZO BAGS
                </h1>
                <div class="w-24 sm:w-32 md:w-40 lg:w-48 h-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 mx-auto rounded-full shadow-lg"></div>
            </div>

            <!-- 404 Error Display -->
            <div class="mb-8 md:mb-12 relative">
                <div class="relative inline-block">
                    <!-- Main 404 Text -->
                    <h2 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl xl:text-[10rem] font-black text-transparent bg-clip-text bg-gradient-to-r from-indigo-300 via-purple-300 to-pink-300 leading-none select-none">
                        404
                    </h2>
                    <!-- Shadow Effect -->
                    <div class="absolute inset-0 text-6xl sm:text-7xl md:text-8xl lg:text-9xl xl:text-[10rem] font-black text-indigo-100 leading-none opacity-30 blur-sm transform translate-x-1 translate-y-1 md:translate-x-2 md:translate-y-2">
                        404
                    </div>
                    <!-- Glowing Effect -->
                    <div class="absolute inset-0 text-6xl sm:text-7xl md:text-8xl lg:text-9xl xl:text-[10rem] font-black text-purple-200 leading-none animate-pulse opacity-10 blur-md">
                        404
                    </div>
                </div>
            </div>

            <!-- Error Message -->
            <div class="mb-8 md:mb-12 space-y-3 md:space-y-4">
                <h3 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800 leading-tight">
                    Oops! Page Not Found
                </h3>
                <p class="text-sm sm:text-base md:text-lg lg:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed px-4">
                    The page you're looking for seems to have wandered off like a lost bag.
                    <br class="hidden sm:block">
                    Don't worry, it happens to the best of us!
                </p>
            </div>

            <!-- Animated Bag Collection -->
            <div class="mb-8 md:mb-12">
                <div class="flex justify-center items-end space-x-3 sm:space-x-4 md:space-x-6">
                    <div class="animate-bounce" style="animation-delay: 0.1s;">
                        <svg class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 text-indigo-400 transform rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
                        </svg>
                    </div>
                    <div class="animate-bounce" style="animation-delay: 0.3s;">
                        <svg class="w-8 h-8 sm:w-12 sm:h-12 md:w-16 md:h-16 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
                        </svg>
                    </div>
                    <div class="animate-bounce" style="animation-delay: 0.5s;">
                        <svg class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10 text-pink-400 transform -rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 12H6L5 9z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Decorative Bottom Elements -->
            <div class="space-y-4 md:space-y-6">
                <!-- Animated Dots -->
                <div class="flex justify-center space-x-2 sm:space-x-3">
                    <div class="w-2 h-2 sm:w-3 sm:h-3 bg-indigo-400 rounded-full animate-pulse"></div>
                    <div class="w-2 h-2 sm:w-3 sm:h-3 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
                    <div class="w-2 h-2 sm:w-3 sm:h-3 bg-pink-400 rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
                </div>
                <!-- Error Code -->
                <div class="text-xs sm:text-sm text-gray-400 font-mono">ERROR_CODE: PAGE_NOT_FOUND</div>
            </div>
        </div>
    </div>

    <!-- Corner Decorations -->
    <div class="absolute top-4 left-4 sm:top-6 sm:left-6 md:top-8 md:left-8">
        <div class="w-8 h-8 sm:w-12 sm:h-12 md:w-16 md:h-16 border-2 md:border-4 border-indigo-200 rounded-full animate-spin-slow opacity-20"></div>
    </div>
    <div class="absolute bottom-4 right-4 sm:bottom-6 sm:right-6 md:bottom-8 md:right-8">
        <div class="w-6 h-6 sm:w-10 sm:h-10 md:w-12 md:h-12 border-2 md:border-4 border-pink-200 rounded-full animate-spin-slower opacity-20"></div>
    </div>

    <!-- Floating Elements -->
    <div class="absolute top-1/2 left-4 sm:left-6 md:left-8 animate-bounce-slow">
        <div class="w-4 h-4 sm:w-6 sm:h-6 md:w-8 md:h-8 bg-gradient-to-r from-purple-300 to-pink-300 rounded-full opacity-20"></div>
    </div>
    <div class="absolute top-1/3 right-4 sm:right-6 md:right-8 animate-bounce-slow" style="animation-delay: 1.5s;">
        <div class="w-3 h-3 sm:w-4 sm:h-4 md:w-6 md:h-6 bg-gradient-to-r from-indigo-300 to-purple-300 rounded-full opacity-20"></div>
    </div>
</body>
</html>