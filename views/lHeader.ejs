  <!-- Tailwind Utility Extension -->
  <style type="text/tailwindcss">
    @layer utilities {
      .text-balance {
        text-wrap: balance;
      }
      .nav-link {
        @apply relative px-3 py-2 text-xs sm:text-sm font-medium text-gray-700 hover:text-primary transition-all duration-300 overflow-hidden;
