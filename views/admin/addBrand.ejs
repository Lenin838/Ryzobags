<div class="px-3 sm:px-4 py-4 sm:py-6 bg-[var(--surface)] rounded-md shadow-sm">
    <h2 class="text-xl sm:text-2xl font-semibold text-[var(--text)] mb-4 sm:mb-6">Add Brand</h2>
    
    <% if (success && success.length > 0) { %>
      <div class="bg-[var(--brand)] bg-opacity-20 text-[var(--text)] p-3 rounded-md mb-4 text-sm"><%= success %></div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
      <div class="bg-red-500 bg-opacity-20 text-red-500 p-3 rounded-md mb-4 text-sm"><%= error %></div>
    <% } %>
  
    <form action="/admin/brands/add" method="POST" class="space-y-6">
      <!-- Brand Name -->
      <div>
        <label for="name" class="block text-sm font-medium text-[var(--text)] mb-1">Brand Name</label>
        <input type="text" name="name" id="name" required
          class="w-full border border-[var(--border)] rounded-md shadow-sm py-2 px-3 focus:ring-2 focus:ring-[var(--brand)] focus:border-[var(--brand)] transition duration-300 text-sm placeholder-gray-400" />
      </div>
  
      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-medium text-[var(--text)] mb-1">Description</label>
        <textarea name="description" id="description" rows="3" required
          placeholder="Enter a brief description of the brand..."
          class="w-full border border-[var(--border)] rounded-md shadow-sm py-2 px-3 focus:ring-2 focus:ring-[var(--brand)] focus:border-[var(--brand)] transition duration-300 text-sm placeholder-gray-400"></textarea>
      </div>
  
      <!-- Buttons -->
      <div class="flex space-x-3 pt-4">
        <button type="submit"
          class="px-4 py-2 bg-[var(--brand)] text-[var(--text)] rounded-md shadow-sm hover:bg-[var(--brand-600)] transition duration-300 text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
          Save
        </button>
        <a href="/admin/brands"
          class="px-4 py-2 bg-gray-500 text-[var(--text)] rounded-md hover:bg-gray-600 transition duration-300 text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 text-center">
          Cancel
        </a>
      </div>
    </form>
</div>