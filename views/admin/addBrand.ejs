<div class="p-8 bg-white rounded-xl shadow-lg">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Add Brand</h2>
    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-700 p-2 rounded mb-4"><%= success %></div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-700 p-2 rounded mb-4"><%= error %></div>
    <% } %>
  
    <form action="/admin/brands/add" method="POST" class="space-y-6">
      <!-- Brand Name -->
      <div>
        <label for="name" class="block text-lg font-medium text-gray-700">Brand Name</label>
        <input type="text" name="name" id="name" required
          class="mt-2 w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-2 focus:ring-indigo-400" />
        
          
      </div>
  
      <!-- Description -->
      <div>
        <label for="description" class="block text-lg font-medium text-gray-700">Description</label>
        <textarea name="description" id="description" rows="4" required
          placeholder="Enter a brief description of the brand..."
          class="mt-2 w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-2 focus:ring-indigo-400"></textarea>
      </div>
  
      <!-- Buttons -->
      <div class="flex items-center gap-6">
        <button type="submit"
          class="bg-indigo-600 text-white font-medium py-2 px-5 rounded-lg hover:bg-indigo-700">
          Save
        </button>
        <a href="/admin/brands"
          class="bg-gray-200 text-gray-800 font-medium py-2 px-5 rounded-lg hover:bg-gray-300 hover:text-indigo-600">
          Cancel
        </a>
      </div>
    </form>
  </div>
  