<div class="p-4 sm:p-6 md:p-8 bg-white rounded-lg sm:rounded-xl shadow-md sm:shadow-lg">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 sm:mb-6">Add Brand</h2>
    
    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 text-green-700 p-2 sm:p-3 rounded mb-3 sm:mb-4 text-sm sm:text-base"><%= success %></div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 text-red-700 p-2 sm:p-3 rounded mb-3 sm:mb-4 text-sm sm:text-base"><%= error %></div>
    <% } %>
  
    <form action="/admin/brands/add" method="POST" class="space-y-4 sm:space-y-6">
      <!-- Brand Name -->
      <div>
        <label for="name" class="block text-base sm:text-lg font-medium text-gray-700">Brand Name</label>
        <input type="text" name="name" id="name" required
          class="mt-1 sm:mt-2 w-full border border-gray-300 rounded-md sm:rounded-lg py-2 px-3 focus:ring-2 focus:ring-indigo-400 text-sm sm:text-base" />
      </div>
  
      <!-- Description -->
      <div>
        <label for="description" class="block text-base sm:text-lg font-medium text-gray-700">Description</label>
        <textarea name="description" id="description" rows="3" required
          placeholder="Enter a brief description of the brand..."
          class="mt-1 sm:mt-2 w-full border border-gray-300 rounded-md sm:rounded-lg py-2 px-3 focus:ring-2 focus:ring-indigo-400 text-sm sm:text-base"></textarea>
      </div>
  
      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row items-center gap-3 sm:gap-4 md:gap-6">
        <button type="submit"
          class="w-full sm:w-auto bg-indigo-600 text-white font-medium py-2 px-4 sm:px-5 rounded-md sm:rounded-lg hover:bg-indigo-700 text-sm sm:text-base">
          Save
        </button>
        <a href="/admin/brands"
          class="w-full sm:w-auto bg-gray-200 text-gray-800 font-medium py-2 px-4 sm:px-5 rounded-md sm:rounded-lg hover:bg-gray-300 hover:text-indigo-600 text-center text-sm sm:text-base">
          Cancel
        </a>
      </div>
    </form>
</div>