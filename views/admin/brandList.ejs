<div class="px-3 sm:px-4 py-4 sm:py-6 bg-[var(--surface)] rounded-md shadow-sm">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-4 sm:mb-6">
      <h2 class="text-xl sm:text-2xl font-semibold text-[var(--text)]">Brand List</h2>
      <a href="/admin/brands/add"
        class="px-4 py-2 bg-[var(--brand)] text-[var(--text)] rounded-md hover:bg-[var(--brand-600)] text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 text-center">
        + Add Brand
      </a>
    </div>
  
    <form method="GET" action="/admin/brands" class="mb-4 flex flex-col sm:flex-row gap-3">
      <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search brand..."
        class="border border-[var(--border)] rounded-md py-2 px-3 sm:px-4 w-full focus:ring-2 focus:ring-[var(--brand)] text-sm placeholder-gray-400" />
      <div class="flex gap-3">
        <button type="submit"
          class="px-4 py-2 bg-[var(--brand)] text-[var(--text)] rounded-md hover:bg-[var(--brand-600)] text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
          Search
        </button>
        <% if (searchQuery) { %>
          <a href="/admin/brands" class="px-4 py-2 bg-gray-500 text-[var(--text)] rounded-md hover:bg-gray-600 text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 flex items-center">
            Clear
          </a>
        <% } %>
      </div>
    </form>
  
    <div class="overflow-x-auto">
      <table class="min-w-full table-auto border border-[var(--border)]">
        <thead class="bg-[var(--bg)]">
          <tr class="text-left text-[var(--text)]">
            <th class="p-2 sm:p-3 text-sm">Index</th>
            <th class="p-2 sm:p-3 text-sm">Name</th>
            <th class="p-2 sm:p-3 text-sm hidden sm:table-cell">Description</th>
            <th class="p-2 sm:p-3 text-sm">Status</th>
            <th class="p-2 sm:p-3 text-sm text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% brands.forEach((brand, index) => { %>
            <tr class="border-t border-[var(--border)] hover:bg-gray-100">
              <td class="p-2 sm:p-3 text-sm text-[var(--text)]"><%= (currentPage - 1) * limit + index + 1 %></td>
              <td class="p-2 sm:p-3 text-sm text-[var(--text)] font-medium"><%= brand.name %></td>
              <td class="p-2 sm:p-3 text-sm text-[var(--text)] hidden sm:table-cell"><%= brand.description %></td>
              <td class="p-2 sm:p-3 text-sm">
                <span class="px-2 py-1 rounded-full text-xs font-semibold
                  <%= brand.isActive ? 'bg-[var(--brand)] bg-opacity-20 text-[var(--brand)]' : 'bg-red-500 bg-opacity-20 text-red-500' %>">
                  <%= brand.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td class="p-2 sm:p-3 text-sm text-center space-x-2">
                <a href="/admin/brands/edit/<%= brand._id %>"
                  class="px-2 py-1 bg-[var(--brand)] text-[var(--text)] rounded-md hover:bg-[var(--brand-600)] text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">Edit</a>
                <% if (brand.isActive) { %>
                  <a href="#" class="unlist-brand px-2 py-1 bg-red-500 text-[var(--text)] rounded-md hover:bg-red-600 text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2" data-id="<%= brand._id %>">Unlist</a>
                <% } else { %>
                  <a href="#" class="list-brand px-2 py-1 bg-[var(--brand)] text-[var(--text)] rounded-md hover:bg-[var(--brand-600)] text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2" data-id="<%= brand._id %>">List</a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  
    <!-- Pagination -->
    <% if (totalPages > 1) { %>
      <div class="mt-4 sm:mt-6 flex flex-col sm:flex-row justify-between items-center gap-3">
        <p class="text-xs text-gray-500">
          Showing <%= (currentPage - 1) * limit + 1 %> to <%= Math.min(currentPage * limit, totalBrands) %> of <%= totalBrands %> brands
        </p>
        <div class="flex flex-wrap gap-1 justify-center">
          <% if (currentPage > 1) { %>
            <a href="/admin/brands?page=1&search=<%= searchQuery %>"
              class="px-2 sm:px-3 py-1 rounded-md border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-gray-100 text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
              First
            </a>
            <a href="/admin/brands?page=<%= currentPage - 1 %>&search=<%= searchQuery %>"
              class="px-2 sm:px-3 py-1 rounded-md border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-gray-100 text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
              Prev
            </a>
          <% } %>

          <% const maxVisiblePages = 5;
             let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
             let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
             
             if (endPage - startPage + 1 < maxVisiblePages) {
               startPage = Math.max(1, endPage - maxVisiblePages + 1);
             }
             
             for (let i = startPage; i <= endPage; i++) { %>
            <a href="/admin/brands?page=<%= i %>&search=<%= searchQuery %>"
              class="px-2 sm:px-3 py-1 rounded-md border border-[var(--border)] <%= i === currentPage ? 'bg-[var(--brand)] text-[var(--text)]' : 'bg-[var(--surface)] text-[var(--text)] hover:bg-gray-100' %> text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
              <%= i %>
            </a>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a href="/admin/brands?page=<%= currentPage + 1 %>&search=<%= searchQuery %>"
              class="px-2 sm:px-3 py-1 rounded-md border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-gray-100 text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
              Next
            </a>
            <a href="/admin/brands?page=<%= totalPages %>&search=<%= searchQuery %>"
              class="px-2 sm:px-3 py-1 rounded-md border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-gray-100 text-xs focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2">
              Last
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const Toast = Swal.mixin({
    toast: true,
    position: 'top-end',
    showConfirmButton: false,
    timer: 2000,
    timerProgressBar: true,
  });

  document.querySelectorAll('.unlist-brand').forEach(btn => {
    btn.addEventListener('click', async e => {
      e.preventDefault();
      const id = btn.dataset.id;
      try {
        const res = await fetch(`/admin/brands/unlist/${id}`, { method: 'PATCH' });
        const result = await res.json();
        if (result.success) {
          Toast.fire({
            icon: 'success',
            title: 'Brand unlisted successfully'
          }).then(() => {
            window.location.reload();
          });
        } else {
          Toast.fire({
            icon: 'error',
            title: result.message || 'Failed to unlist brand'
          });
        }
      } catch (error) {
        Toast.fire({
          icon: 'error',
          title: 'Network error while unlisting'
        });
      }
    });
  });

  document.querySelectorAll('.list-brand').forEach(btn => {
    btn.addEventListener('click', async e => {
      e.preventDefault();
      const id = btn.dataset.id;
      try {
        const res = await fetch(`/admin/brands/list/${id}`, { method: 'PATCH' });
        const result = await res.json();
        if (result.success) {
          Toast.fire({
            icon: 'success',
            title: 'Brand listed successfully'
          }).then(() => {
            window.location.reload();
          });
        } else {
          Toast.fire({
            icon: 'error',
            title: result.message || 'Failed to list brand'
          });
        }
      } catch (error) {
        Toast.fire({
          icon: 'error',
          title: 'Network error while listing'
        });
      }
    });
  });
});
</script>