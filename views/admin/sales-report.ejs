<%
// Ensure safe default values
const safeRange = range || '';
const safeStartDate = startDate || '';
const safeEndDate = endDate || '';
const queryParams = new URLSearchParams({
  range: safeRange,
  startDate: safeStartDate,
  endDate: safeEndDate
}).toString();
%>

<div class="px-3 sm:px-4 py-4 sm:py-6 bg-[var(--surface)] rounded-md shadow-sm">
    <div class="space-y-4 sm:space-y-6">
        <!-- Header Section -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
            <div>
                <h1 class="text-xl sm:text-2xl font-semibold text-[var(--text)]">Sales Analytics</h1>
                <p class="text-gray-500 text-sm mt-1">Track and analyze your sales performance</p>
            </div>
            <!-- Export Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                <a href="/admin/sales-report/download-pdf?<%= queryParams %>" 
                   class="flex items-center justify-center gap-2 px-3 py-2 bg-[var(--surface)] border border-[var(--border)] rounded-md text-sm font-medium text-[var(--text)] hover:bg-gray-100 transition focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2"
                   onclick="handleExport('PDF')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--brand)]" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                    </svg>
                    PDF Report
                </a>
                <a href="/admin/sales-report/download-excel?<%= queryParams %>" 
                   class="flex items-center justify-center gap-2 px-3 py-2 bg-[var(--surface)] border border-[var(--border)] rounded-md text-sm font-medium text-[var(--text)] hover:bg-gray-100 transition focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2"
                   onclick="handleExport('Excel')">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                    Excel Export
                </a>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 sm:p-6">
            <h2 class="text-base sm:text-lg font-semibold text-[var(--text)] mb-4">Filter Report</h2>
            <form method="GET" action="/admin/sales-report" class="space-y-4 sm:grid sm:grid-cols-4 sm:gap-3">
                <div>
                    <label for="range" class="block text-sm font-medium text-[var(--text)] mb-1">Time Period</label>
                    <select name="range" id="range" class="w-full rounded-md border border-[var(--border)] focus:ring-[var(--brand)] focus:border-[var(--brand)] py-2 px-3 text-sm transition">
                        <option value="daily" <%= safeRange === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= safeRange === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= safeRange === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= safeRange === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%= safeRange === 'custom' ? 'selected' : '' %>>Custom Range</option>
                    </select>
                </div>
                <div>
                    <label for="startDate" class="block text-sm font-medium text-[var(--text)] mb-1">From</label>
                    <input type="date" name="startDate" id="startDate" value="<%= safeStartDate %>" 
                           class="w-full rounded-md border border-[var(--border)] focus:ring-[var(--brand)] focus:border-[var(--brand)] py-2 px-3 text-sm transition">
                </div>
                <div>
                    <label for="endDate" class="block text-sm font-medium text-[var(--text)] mb-1">To</label>
                    <input type="date" name="endDate" id="endDate" value="<%= safeEndDate %>" 
                           class="w-full rounded-md border border-[var(--border)] focus:ring-[var(--brand)] focus:border-[var(--brand)] py-2 px-3 text-sm transition">
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full bg-[var(--brand)] hover:bg-[var(--brand-600)] text-[var(--text)] font-medium py-2 px-3 rounded-md transition text-sm focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 h-[42px]">
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
            <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 border border-[var(--border)]">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-[var(--text)]">Report Period</p>
                        <h3 class="text-lg font-semibold text-[var(--text)] mt-1"><%= reportData.startDate %> - <%= reportData.endDate %></h3>
                    </div>
                    <div class="bg-[var(--bg)] p-2 rounded-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--brand)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>
            </div>
            <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 border border-[var(--border)]">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-[var(--text)]">Total Orders</p>
                        <h3 class="text-lg font-semibold text-[var(--text)] mt-1"><%= reportData.totalOrders %></h3>
                    </div>
                    <div class="bg-[var(--bg)] p-2 rounded-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                    </div>
                </div>
            </div>
            <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 border border-[var(--border)]">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-[var(--text)]">Total Sales</p>
                        <h3 class="text-lg font-semibold text-[var(--text)] mt-1">₹<%= reportData.totalSales.toFixed(2) %></h3>
                    </div>
                    <div class="bg-[var(--bg)] p-2 rounded-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
            </div>
            <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 border border-[var(--border)]">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-[var(--text)]">Total Discount</p>
                        <h3 class="text-lg font-semibold text-[var(--text)] mt-1">₹<%= reportData.totalDiscount.toFixed(2) %></h3>
                    </div>
                    <div class="bg-[var(--bg)] p-2 rounded-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
        <div class="bg-[var(--surface)] rounded-md shadow-sm overflow-hidden">
            <div class="px-4 sm:px-6 py-3 sm:py-4 border-b border-[var(--border)] flex flex-col sm:flex-row justify-between items-start sm:items-center">
                <h2 class="text-base sm:text-lg font-semibold text-[var(--text)]">Order Details</h2>
                <p class="text-sm text-gray-500 mt-1 sm:mt-0"><%= reportData.order.length %> orders found</p>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-[var(--border)]">
                    <thead class="bg-[var(--bg)]">
                        <tr>
                            <th scope="col" class="px-3 sm:px-4 py-2 sm:py-3 text-left text-xs font-medium text-[var(--text)] uppercase tracking-wider">Order ID</th>
                            <th scope="col" class="px-3 sm:px-4 py-2 sm:py-3 text-left text-xs font-medium text-[var(--text)] uppercase tracking-wider">Date</th>
                            <th scope="col" class="px-3 sm:px-4 py-2 sm:py-3 text-left text-xs font-medium text-[var(--text)] uppercase tracking-wider">Total</th>
                            <th scope="col" class="px-3 sm:px-4 py-2 sm:py-3 text-left text-xs font-medium text-[var(--text)] uppercase tracking-wider">Discount</th>
                            <th scope="col" class="px-3 sm:px-4 py-2 sm:py-3 text-left text-xs font-medium text-[var(--text)] uppercase tracking-wider">Coupon</th>
                        </tr>
                    </thead>
                    <tbody class="bg-[var(--surface)] divide-y divide-[var(--border)]">
                        <% reportData.order.forEach(ord => { %>
                            <tr class="hover:bg-gray-100 transition">
                                <td class="px-3 sm:px-4 py-2 sm:py-3 whitespace-nowrap text-sm font-medium text-[var(--text)]">#<%= ord.orderId %></td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 whitespace-nowrap text-sm text-[var(--text)]"><%= ord.orderDate.toLocaleDateString() %></td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 whitespace-nowrap text-sm font-medium text-[var(--text)]">₹<%= (ord.actualTotal || 0).toFixed(2) %></td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 whitespace-nowrap text-sm text-[var(--text)]">₹<%= (ord.actualDiscount || 0).toFixed(2) %></td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 whitespace-nowrap text-sm text-[var(--text)]">
                                    <% if (ord.couponId?.code) { %>
                                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-[var(--brand)] bg-opacity-20 text-[var(--brand)]">
                                            <%= ord.couponId.code %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-gray-400">N/A</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Toast configuration
    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 4000,
        timerProgressBar: true,
        didOpen: (toast) => {
            toast.addEventListener('mouseenter', Swal.stopTimer);
            toast.addEventListener('mouseleave', Swal.resumeTimer);
        }
    });

    // Handle export actions
    async function handleExport(type) {
        try {
            Toast.fire({
                icon: 'info',
                title: `Generating ${type} report...`
            });
            // Simulate export success (actual fetch would depend on server response)
            setTimeout(() => {
                Toast.fire({
                    icon: 'success',
                    title: `${type} report generated successfully!`
                });
            }, 1000);
        } catch (err) {
            Toast.fire({
                icon: 'error',
                title: `Failed to generate ${type} report. Please try again.`
            });
            console.error('Export error:', err);
        }
    }
</script>