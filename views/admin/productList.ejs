<div class="mt-4 sm:mt-6 px-3 sm:px-4">
  <div class="bg-[var(--surface)] rounded-md shadow-sm p-4 sm:p-6 border border-[var(--border)]">
    <!-- Page Header -->
    <div class="mb-6 border-b border-[var(--border)] pb-4">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
        <div>
          <h1 class="text-xl sm:text-2xl font-semibold text-[var(--text)]">Products</h1>
          <p class="text-sm text-gray-500 mt-1">Manage your product inventory</p>
        </div>
        <div class="hidden sm:block">
          <div class="bg-[var(--brand)] bg-opacity-20 text-[var(--text)] px-3 py-1.5 rounded-md flex items-center gap-2 text-sm font-medium">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Total Products: <span class="font-semibold"><%= totalCount %></span></span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Top bar -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
      <form class="flex items-center gap-2 w-full sm:w-auto" method="GET" action="/admin/products">
        <div class="relative flex-grow">
          <input
            type="text"
            name="search"
            value="<%= search %>"
            placeholder "Search product..."
            class="w-full border border-[var(--border)] pl-10 pr-4 py-2 rounded-l-md focus:ring-2 focus:ring-[var(--brand)] focus:border-[var(--brand)] text-sm"
          />
          <svg class="h-5 w-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <button class="bg-[var(--brand)] hover:bg-[var(--brand-600)] text-[var(--text)] px-4 py-2 rounded-r-md font-medium focus:outline-none focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 text-sm">
          Search
        </button>
        <a href="/admin/products" class="text-gray-500 hover:text-gray-700 text-sm font-medium px-4 py-2 rounded-md hover:bg-gray-100 focus:ring-2 focus:ring-[var(--border)] focus:ring-offset-2">
          Clear
        </a>
      </form>

      <a href="/admin/products/add" class="bg-[var(--brand)] hover:bg-[var(--brand-600)] text-[var(--text)] px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 flex items-center gap-2 w-full sm:w-auto text-sm">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Product
      </a>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto rounded-md border border-[var(--border)]">
      <table class="w-full table-auto divide-y divide-[var(--border)]">
        <thead class="bg-[var(--bg)]">
          <tr>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Index</th>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Image</th>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Name</th>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Price</th>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Offer</th>
            <th class="p-4 text-left font-medium text-gray-500 text-xs uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-[var(--border)] bg-[var(--surface)]">
          <% products.forEach((product, i) => { %>
            <tr class="hover:bg-gray-50">
              <td class="p-4 text-gray-500 text-sm"><%= i + 1 + (currentPage - 1) * 5 %></td>
              <td class="p-4">
                <div class="h-16 w-16 rounded-md overflow-hidden border border-[var(--border)]">
                  <img src="<%= product.mainImage %>" class="h-full w-full object-cover" />
                </div>
              </td>
              <td class="p-4 font-medium text-[var(--text)] text-sm"><%= product.name %></td>
              <td class="p-4">
                <span class="bg-[var(--brand)] bg-opacity-20 text-[var(--text)] px-2.5 py-1 rounded-md text-sm font-medium">
                  â‚¹ <%= product.variants[0].regularPrice %>
                </span>
              </td>
              <td class="p-4">
                <span class="bg-[var(--brand)] bg-opacity-20 text-[var(--text)] px-2.5 py-1 rounded-md text-sm font-medium">
                  <%= product.offer.discountPercentage %>%
                </span>
              </td>
              <td class="p-4">
                <div class="flex gap-3">
                  <a href="/admin/products/edit/<%= product._id %>" class="text-[var(--text)] hover:bg-[var(--brand)] hover:bg-opacity-20 font-medium px-3 py-1 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 flex items-center gap-1 text-sm">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit
                  </a>
                  <button
                    onclick="toggleProductListing('<%= product._id %>')"
                    class="font-medium px-3 py-1 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 flex items-center gap-1 text-sm <%= product.isListed ? 'text-amber-600 hover:bg-amber-50' : 'text-green-600 hover:bg-green-50' %>"
                  >
                    <% if(product.isListed) { %>
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                      </svg>
                      Unlist
                    <% } else { %>
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      List
                    <% } %>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Bottom Add Product Button -->
    <div class="flex justify-center my-6">
      <a href="/admin/products/add" class="bg-[var(--brand)] hover:bg-[var(--brand-600)] text-[var(--text)] px-4 py-2 rounded-md font-medium focus:outline-none focus:ring-2 focus:ring-[var(--brand)] focus:ring-offset-2 flex items-center gap-2 text-sm">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add New Product
      </a>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
      <div class="flex flex-col sm:flex-row justify-between items-center gap-3">
        <p class="text-sm text-gray-700">
          Showing <%= (currentPage - 1) * 5 + 1 %> to <%= Math.min(currentPage * 5, totalCount) %> of <%= totalCount %> products
        </p>
        <div class="flex gap-1 flex-wrap justify-center">
          <% if (currentPage > 1) { %>
            <a href="?page=1&search=<%= search %>" class="px-3 py-1 border border-[var(--border)] rounded-md hover:bg-gray-100 text-sm">
              First
            </a>
            <a href="?page=<%= currentPage - 1 %>&search=<%= search %>" class="px-3 py-1 border border-[var(--border)] rounded-md hover:bg-gray-100 text-sm">
              Prev
            </a>
          <% } %>

          <% const maxVisiblePages = 5;
             let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
             let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
             
             if (endPage - startPage + 1 < maxVisiblePages) {
               startPage = Math.max(1, endPage - maxVisiblePages + 1);
             }
             
             for (let i = startPage; i <= endPage; i++) { %>
            <a href="?page=<%= i %>&search=<%= search %>" class="px-3 py-1 border border-[var(--border)] rounded-md <%= i === currentPage ? 'bg-[var(--brand)] text-[var(--text)]' : 'hover:bg-gray-100' %> text-sm">
              <%= i %>
            </a>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>&search=<%= search %>" class="px-3 py-1 border border-[var(--border)] rounded-md hover:bg-gray-100 text-sm">
              Next
            </a>
            <a href="?page=<%= totalPages %>&search=<%= search %>" class="px-3 py-1 border border-[var(--border)] rounded-md hover:bg-gray-100 text-sm">
              Last
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
    
    <!-- Footer -->
    <div class="mt-6 pt-4 border-t border-[var(--border)] text-center text-sm text-gray-500">
      <p>Showing <%= products.length %> products out of <%= totalCount %> total</p>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  async function toggleProductListing(productId) {
    const confirmResult = await Swal.fire({
      title: 'Are you sure?',
      text: "Do you want to change this product's listing status?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, change it!'
    });

    if (!confirmResult.isConfirmed) return;

    try {
      const res = await fetch(`/admin/products/toggle-listing/${productId}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      const result = await res.json();

      if (res.ok) {
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'success',
          title: 'Product listing updated!',
          showConfirmButton: false,
          timer: 2000
        });
        setTimeout(() => location.reload(), 1500); // Delay reload for effect
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: result.message || 'Failed to toggle listing.',
        });
      }
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Something went wrong. Please try again.',
      });
      console.error(error);
    }
  }
</script>