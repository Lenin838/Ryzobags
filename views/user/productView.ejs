<%- include("partials/userHeader") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | RYZO BAGS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                DEFAULT: '#007D8B',
                dark: '#006570',
                light: '#4cacb6',
              },
              secondary: '#f8f9fa',
            },
            fontFamily: {
              sans: ['Inter', 'sans-serif'],
            },
          },
        },
      };
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .zoom-container {
            position: relative;
            overflow: hidden;
            cursor: zoom-in;
        }
        .zoomed-image {
            position: absolute;
            top: 0;
            left: 100%;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-size: 200%;
            opacity: 0;
            transition: opacity 0.2s;
            pointer-events: none;
            z-index: 10;
            border-radius: 0.375rem /* rounded-md */;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }
        .zoom-container:hover .zoomed-image {
            opacity: 1;
            left: 0;
        }
        
        /* Custom scrollbar for thumbnail gallery */
        .thumbnail-scroll::-webkit-scrollbar {
            height: 3px;
        }
        .thumbnail-scroll::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        .thumbnail-scroll::-webkit-scrollbar-thumb {
            background: #007D8B;
            border-radius: 10px;
        }
        .thumbnail-scroll::-webkit-scrollbar-thumb:hover {
            background: #006570;
        }
        @media (min-width: 640px) {
            .thumbnail-scroll::-webkit-scrollbar {
                height: 4px;
            }
            .zoomed-image {
                border-radius: 0.5rem /* rounded-xl */;
            }
        }
        
        /* Ensure full height layout */
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        .content {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/productViewScript.js" defer></script>
</head>
<body class="bg-gray-50 font-sans">
    <div class="content">
        <!-- Breadcrumbs -->
        <div class="bg-gradient-to-r from-primary-dark to-primary py-6 sm:py-8">
            <div class="container mx-auto px-2 sm:px-4">
                <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-3 sm:mb-4"><%= product.name %></h1>
                <div class="flex items-center text-primary-light text-sm sm:text-base">
                    <a href="/user/home" class="hover:text-white transition-colors">Home</a>
                    <span class="mx-1 sm:mx-2">/</span>
                    <a href="/user/shop" class="hover:text-white transition-colors">Shop</a>
                    <span class="mx-1 sm:mx-2">/</span>
                    <span class="text-white"><%= product.name %></span>
                </div>
            </div>
        </div>

        <!-- Product Section -->
        <div class="container mx-auto px-2 sm:px-4 py-6 sm:py-8">
            <div class="flex flex-col md:flex-row gap-6 sm:gap-8">
                <!-- Product Image Gallery -->
                <div class="w-full md:w-1/2">
                    <div class="zoom-container rounded-lg sm:rounded-xl overflow-hidden border border-gray-100 shadow-sm bg-white">
                        <img src="<%= product.mainImage %>" class="w-full h-64 sm:h-80 md:h-auto object-contain aspect-square p-2 sm:p-4" id="mainProductImage" alt="<%= product.name %>">
                        <div class="zoomed-image" id="zoomedImage"></div>
                    </div>
                    <div class="flex mt-3 sm:mt-4 space-x-1 sm:space-x-2 overflow-x-auto pb-2 thumbnail-scroll">
                        <% if (Array.isArray(product.subImages)) { %>
                            <% product.subImages.forEach((image, index) => { %>
                                <div class="min-w-[64px] h-16 sm:min-w-[80px] sm:h-20 rounded-lg overflow-hidden border-2 <%= index === 0 ? 'border-primary' : 'border-transparent' %> hover:border-primary transition cursor-pointer" onclick="changeImage('<%= image %>', this)">
                                    <img src="<%= image %>" class="w-full h-full object-cover" alt="Product thumbnail">
                                </div>
                            <% }) %>
                        <% } else if (product.mainImage) { %>
                            <div class="min-w-[64px] h-16 sm:min-w-[80px] sm:h-20 rounded-lg overflow-hidden border-2 border-primary hover:border-primary transition cursor-pointer" onclick="changeImage('<%= product.mainImage %>', this)">
                                <img src="<%= product.mainImage %>" class="w-full h-full object-cover" alt="Product thumbnail">
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Product Actions for Mobile -->
                    <div class="md:hidden mt-4 sm:mt-6 flex flex-col space-y-2 sm:space-y-3">
                        <button class="w-full py-2 sm:py-3 bg-primary hover:bg-primary-dark text-white font-medium rounded-lg transition flex items-center justify-center text-sm sm:text-base" onclick="addtoCart('<%= product._id %>')">
                            <i class="fa-solid fa-cart-plus mr-2"></i> Add to Cart
                        </button>
                        <button class="w-full py-2 sm:py-3 bg-gray-100 hover:bg-primary/10 text-gray-700 font-medium rounded-lg transition flex items-center justify-center text-sm sm:text-base" onclick="addToWishlist('<%= product._id %>')">
                            <i class="fa-regular fa-heart mr-2"></i> Add to Wishlist
                        </button>
                    </div>
                </div>

                <!-- Product Details -->
                <div class="w-full md:w-1/2">
                    <div class="bg-white p-4 sm:p-6 md:p-8 rounded-lg sm:rounded-xl shadow-sm border border-gray-100">
                        <!-- Product Title and Rating -->
                        <div class="hidden md:block">
                            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2"><%= product.name %></h2>
                            <div class="flex items-center mt-2 mb-4 sm:mb-6">
                                <div class="flex text-amber-400">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star-half-stroke"></i>
                                </div>
                                <span class="ml-2 text-gray-600 text-sm sm:text-base">4.5 (128 ratings)</span>
                                <span class="mx-2 text-gray-400 hidden sm:inline">|</span>
                                <span class="text-green-600 text-sm sm:text-base hidden sm:inline">2,456 sold</span>
                            </div>
                        </div>
                        
                        <!-- Mobile Rating -->
                        <div class="md:hidden flex items-center mb-3 sm:mb-4">
                            <div class="flex text-amber-400">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star-half-stroke"></i>
                            </div>
                            <span class="ml-2 text-gray-600 text-sm">4.5 (128 ratings)</span>
                        </div>
                        
                        <!-- Unified Price and Stock Section -->
                        <div class="p-3 sm:p-4 bg-primary/5 rounded-lg mb-4 sm:mb-6">
                            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2 sm:gap-0">
                                <div>
                                    <span class="text-lg sm:text-xl md:text-2xl font-bold text-primary" id="currentPrice">
                                        <!-- Price will be updated by JavaScript -->
                                    </span>
                                </div>
                                <div class="flex items-center">
                                    <span class="text-green-600 font-medium text-sm sm:text-base" id="stockInfo">
                                        <i class="fa-solid fa-check mr-1"></i>
                                        <span id="currentStock"><%= product.variants[0] && typeof product.variants[0].quantity === 'number' ? product.variants[0].quantity : 'N/A' %></span> In Stock
                                    </span>
                                </div>
                            </div>
                            <div class="mt-3 sm:mt-4 flex flex-col sm:flex-row items-start sm:items-center text-xs sm:text-sm text-gray-600 gap-2 sm:gap-4">
                                <div class="flex items-center">
                                    <i class="fa-solid fa-truck mr-2 text-primary"></i>
                                    Free Delivery
                                </div>
                                <div class="flex items-center">
                                    <i class="fa-solid fa-shield-halved mr-2 text-primary"></i>
                                    Genuine Product
                                </div>
                            </div>
                        </div>
                        
                        <!-- Divider -->
                        <div class="my-4 sm:my-6 border-t border-gray-100"></div>
                        
                        <!-- Product Options - Size Selection -->
                        <div>
                            <label class="block text-gray-700 font-medium mb-2 sm:mb-3 text-sm sm:text-base">Select Size:</label>
                            <div class="flex flex-wrap gap-2 sm:gap-3" id="variantSelector">
                                <% product.variants.forEach((variant, index) => { %>
                                    <button 
                                        class="px-3 sm:px-4 py-1 sm:py-2 border-2 <%= index === 0 ? 'border-primary text-primary bg-primary/5' : 'border-gray-200 text-gray-700' %> rounded-lg font-medium hover:border-primary hover:text-primary transition text-sm sm:text-base"
                                        onclick="selectVariant('<%= index %>')"
                                        data-variant-index="<%= index %>"
                                    >
                                        <%= variant.size %>
                                    </button>
                                <% }) %>
                            </div>
                        </div>
                        
                        <!-- Quantity Selector -->
                        <div class="mt-4 sm:mt-6">
                            <label class="block text-gray-700 font-medium mb-2 sm:mb-3 text-sm sm:text-base">Quantity:</label>
                            <div class="flex items-center">
                                <button class="w-8 sm:w-10 h-8 sm:h-10 bg-gray-100 rounded-l-lg flex items-center justify-center hover:bg-primary/10 hover:text-primary transition" onclick="decrementQuantity()">
                                    <i class="fa-solid fa-minus"></i>
                                </button>
                                <input type="number" id="quantityInput" value="1" min="1" max="<%= product.variants[0] && typeof product.variants[0].quantity === 'number' ? product.variants[0].quantity : 1 %>" class="w-12 sm:w-16 h-8 sm:h-10 border-y border-gray-200 text-center focus:outline-none text-sm sm:text-base" readonly>
                                <button class="w-8 sm:w-10 h-8 sm:h-10 bg-gray-100 rounded-r-lg flex items-center justify-center hover:bg-primary/10 hover:text-primary transition" onclick="incrementQuantity()">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                                <span class="ml-3 sm:ml-4 text-xs sm:text-sm text-gray-500">
                                    <span id="currentStock-text"><%= product.variants[0] && typeof product.variants[0].quantity === 'number' ? product.variants[0].quantity : 'N/A' %></span> items available
                                </span>
                            </div>
                        </div>
                        
                        <!-- Action Buttons - Desktop Only -->
                        <div class="hidden md:flex mt-6 sm:mt-8 gap-3 sm:gap-4">
                            <button class="flex-1 py-2 sm:py-3 px-4 sm:px-6 bg-primary text-white rounded-lg font-medium hover:bg-primary-dark transition flex items-center justify-center text-sm sm:text-base" onclick="addtoCart('<%= product._id %>')">
                                <i class="fa-solid fa-cart-plus mr-2"></i> Add to Cart
                            </button>
                            <button class="p-2 sm:p-3 border border-gray-200 text-gray-700 rounded-lg hover:bg-gray-50 hover:text-primary transition" onclick="addToWishlist('<%= product._id %>')">
                                <i class="<%= wishlist.includes(product._id.toString()) ? 'fa-solid text-red-600' : 'fa-regular' %> fa-heart"></i>
                            </button>
                        </div>
                        
                        <!-- Delivery & Returns -->
                        <div class="mt-4 sm:mt-6 flex flex-col sm:flex-row gap-3 sm:gap-4">
                            <div class="flex-1 border border-gray-200 rounded-lg p-3 sm:p-4 hover:border-primary/30 hover:bg-primary/5 transition">
                                <div class="flex items-center">
                                    <div class="w-8 sm:w-10 h-8 sm:h-10 rounded-full bg-primary/10 flex items-center justify-center mr-2 sm:mr-3">
                                        <i class="fa-solid fa-truck-fast text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="font-medium text-gray-800 text-sm sm:text-base">Fast Delivery</h5>
                                        <p class="text-xs sm:text-sm text-gray-500">Delivered in 2-3 days</p>
                                    </div>
                                </div>
                            </div>
                            <div class="flex-1 border border-gray-200 rounded-lg p-3 sm:p-4 hover:border-primary/30 hover:bg-primary/5 transition">
                                <div class="flex items-center">
                                    <div class="w-8 sm:w-10 h-8 sm:h-10 rounded-full bg-primary/10 flex items-center justify-center mr-2 sm:mr-3">
                                        <i class="fa-solid fa-rotate-left text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="font-medium text-gray-800 text-sm sm:text-base">Easy Returns</h5>
                                        <p class="text-xs sm:text-sm text-gray-500">30-day return policy</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Description & Details -->
        <div class="container mx-auto px-2 sm:px-4 py-6 sm:py-8">
            <div class="bg-white p-4 sm:p-6 md:p-8 rounded-lg sm:rounded-xl shadow-sm border border-gray-100">
                <div class="flex flex-col md:flex-row gap-4 sm:gap-6">
                    <div class="md:w-2/3">
                        <div class="border-b border-gray-100 pb-3 sm:pb-4 mb-4 sm:mb-6">
                            <h3 class="text-xl sm:text-2xl font-bold text-gray-800 flex items-center">
                                <span class="w-1 h-5 sm:w-1.5 sm:h-6 bg-primary rounded-full mr-2 sm:mr-3"></span>
                                Product Description
                            </h3>
                        </div>
                        
                        <p class="text-sm sm:text-base text-gray-700 leading-relaxed mb-4 sm:mb-6">
                            Crafted for both style and functionality, this premium bag blends contemporary design with timeless appeal. Featuring a spacious interior and thoughtfully placed compartments, it offers effortless organization for your daily essentials. The high-quality materials and sturdy craftsmanship ensure durability, while the sleek silhouette and refined details add a touch of elegance to any outfit.
                        </p>

                        <div class="mt-6 sm:mt-8">
                            <h4 class="text-base sm:text-lg font-semibold text-gray-800 mb-3 sm:mb-4 flex items-center">
                                <i class="fa-solid fa-circle-check text-primary mr-2"></i>
                                Benefits:
                            </h4>
                            <ul class="space-y-2 sm:space-y-3 pl-4 sm:pl-6">
                                <li class="flex items-start text-sm sm:text-base">
                                    <i class="fa-solid fa-circle-check text-primary mt-1 mr-2"></i>
                                    <span>Premium-quality materials for long-lasting durability</span>
                                </li>
                                <li class="flex items-start text-sm sm:text-base">
                                    <i class="fa-solid fa-circle-check text-primary mt-1 mr-2"></i>
                                    <span>Balanced blend of style, comfort, and durability</span>
                                </li>
                                <li class="flex items-start text-sm sm:text-base">
                                    <i class="fa-solid fa-circle-check text-primary mt-1 mr-2"></i>
                                    <span>Perfect for every occasion, from casual outings to formal events</span>
                                </li>
                                <li class="flex items-start text-sm sm:text-base">
                                    <i class="fa-solid fa-circle-check text-primary mt-1 mr-2"></i>
                                    <span>Elegant bags with premium packaging</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="md:w-1/3 md:border-l border-gray-100 md:pl-4 sm:md:pl-6">
                        <h4 class="text-base sm:text-lg font-semibold text-gray-800 mb-3 sm:mb-4 flex items-center">
                            <i class="fa-solid fa-circle-info text-primary mr-2"></i>
                            Product Details:
                        </h4>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg border border-gray-100 hover:border-primary/30 hover:bg-primary/5 transition">
                                <p class="text-xs sm:text-sm text-gray-500">Size</p>
                                <p class="font-medium text-gray-800 text-sm sm:text-base">Medium / Small / Large</p>
                            </div>
                            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg border border-gray-100 hover:border-primary/30 hover:bg-primary/5 transition">
                                <p class="text-xs sm:text-sm text-gray-500">Type</p>
                                <p class="font-medium text-gray-800 text-sm sm:text-base">Premium bags</p>
                            </div>
                            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg border border-gray-100 hover:border-primary/30 hover:bg-primary/5 transition">
                                <p class="text-xs sm:text-sm text-gray-500">Bag Collection</p>
                                <p class="font-medium text-gray-800 text-sm sm:text-base">Leather Luxe</p>
                            </div>
                            <div class="bg-gray-50 p-3 sm:p-4 rounded-lg border border-gray-100 hover:border-primary/30 hover:bg-primary/5 transition">
                                <p class="text-xs sm:text-sm text-gray-500">Durability</p>
                                <p class="font-medium text-gray-800 text-sm sm:text-base">Long-lasting (8-10 years)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Reviews Section -->
        <div class="container mx-auto px-2 sm:px-4 py-6 sm:py-8">
            <div class="bg-white p-4 sm:p-6 md:p-8 rounded-lg sm:rounded-xl shadow-sm border border-gray-100">
                <div class="border-b border-gray-100 pb-3 sm:pb-4 mb-4 sm:mb-6">
                    <h3 class="text-xl sm:text-2xl font-bold text-gray-800 flex items-center">
                        <span class="w-1 h-5 sm:w-1.5 sm:h-6 bg-primary rounded-full mr-2 sm:mr-3"></span>
                        Customer Reviews
                    </h3>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
                    <!-- Review Summary -->
                    <div class="md:col-span-1">
                        <div class="flex flex-col items-center p-4 sm:p-6 bg-primary/5 rounded-lg sm:rounded-xl">
                            <div class="text-4xl sm:text-5xl font-bold text-primary">4.5</div>
                            <div class="flex text-amber-400 my-1 sm:my-2">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star-half-stroke"></i>
                            </div>
                            <p class="text-xs sm:text-sm text-gray-600">Based on 128 reviews</p>
                        </div>
                        
                        <div class="mt-4 sm:mt-6 space-y-2 sm:space-y-3">
                            <div class="flex items-center">
                                <span class="w-12 sm:w-16 text-xs sm:text-sm text-gray-600">5 stars</span>
                                <div class="flex-1 h-2 bg-gray-200 rounded-full mx-1 sm:mx-2">
                                    <div class="h-2 bg-primary rounded-full" style="width: 75%"></div>
                                </div>
                                <span class="w-8 text-xs sm:text-sm text-gray-600">75%</span>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 sm:w-16 text-xs sm:text-sm text-gray-600">4 stars</span>
                                <div class="flex-1 h-2 bg-gray-200 rounded-full mx-1 sm:mx-2">
                                    <div class="h-2 bg-primary rounded-full" style="width: 15%"></div>
                                </div>
                                <span class="w-8 text-xs sm:text-sm text-gray-600">15%</span>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 sm:w-16 text-xs sm:text-sm text-gray-600">3 stars</span>
                                <div class="flex-1 h-2 bg-gray-200 rounded-full mx-1 sm:mx-2">
                                    <div class="h-2 bg-primary rounded-full" style="width: 7%"></div>
                                </div>
                                <span class="w-8 text-xs sm:text-sm text-gray-600">7%</span>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 sm:w-16 text-xs sm:text-sm text-gray-600">2 stars</span>
                                <div class="flex-1 h-2 bg-gray-200 rounded-full mx-1 sm:mx-2">
                                    <div class="h-2 bg-primary rounded-full" style="width: 2%"></div>
                                </div>
                                <span class="w-8 text-xs sm:text-sm text-gray-600">2%</span>
                            </div>
                            <div class="flex items-center">
                                <span class="w-12 sm:w-16 text-xs sm:text-sm text-gray-600">1 star</span>
                                <div class="flex-1 h-2 bg-gray-200 rounded-full mx-1 sm:mx-2">
                                    <div class="h-2 bg-primary rounded-full" style="width: 1%"></div>
                                </div>
                                <span class="w-8 text-xs sm:text-sm text-gray-600">1%</span>
                            </div>
                        </div>
                        
                        <div class="mt-4 sm:mt-6">
                            <button class="w-full py-2 sm:py-3 px-3 sm:px-4 bg-primary text-white rounded-lg font-medium hover:bg-primary-dark transition flex items-center justify-center text-sm sm:text-base">
                                <i class="fa-solid fa-pen-to-square mr-2"></i>
                                Write a Review
                            </button>
                        </div>
                    </div>
                    
                    <!-- Review List -->
                    <div class="md:col-span-2">
                        <!-- Review Item 1 -->
                        <div class="border-b border-gray-100 pb-4 sm:pb-6 mb-4 sm:mb-6">
                            <div class="flex flex-col sm:flex-row justify-between items-start">
                                <div class="flex items-center mb-2 sm:mb-0">
                                    <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Reviewer" class="w-8 sm:w-10 h-8 sm:h-10 rounded-full mr-2 sm:mr-3">
                                    <div>
                                        <h5 class="font-medium text-gray-800 text-sm sm:text-base">Rahul Sharma</h5>
                                        <p class="text-xs sm:text-sm text-gray-500">Verified Purchase</p>
                                    </div>
                                </div>
                                <div class="flex text-amber-400">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>
                            </div>
                            <p class="mt-2 sm:mt-3 text-sm sm:text-base text-gray-700">
                                Absolutely love this bag! The design is elegant and timeless. I've received numerous compliments whenever I carry it. The packaging is premium, making it a perfect gift. Highly recommend!
                            </p>
                            <div class="mt-2 sm:mt-3 flex items-center text-xs sm:text-sm text-gray-500">
                                <span>2 months ago</span>
                                <span class="mx-1 sm:mx-2">•</span>
                                <button class="hover:text-primary transition flex items-center">
                                    <i class="fa-regular fa-thumbs-up mr-1"></i> Helpful (24)
                                </button>
                            </div>
                        </div>
                        
                        <!-- Review Item 2 -->
                        <div class="border-b border-gray-100 pb-4 sm:pb-6 mb-4 sm:mb-6">
                            <div class="flex flex-col sm:flex-row justify-between items-start">
