<%- include("partials/userHeader") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | RYZO BAGS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                DEFAULT: '#007D8B',
                dark: '#006570',
                light: '#4cacb6',
              },
              secondary: '#f8f9fa',
            },
            fontFamily: {
              sans: ['Inter', 'sans-serif'],
            },
          },
        },
      };
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .zoom-container {
            position: relative;
            overflow: hidden;
            cursor: zoom-in;
        }
        .zoomed-image {
            position: absolute;
            top: 0;
            left: 100%;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-size: 200%;
            opacity: 0;
            transition: opacity 0.2s;
            pointer-events: none;
            z-index: 10;
            border-radius: 0.5rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }
        .zoom-container:hover .zoomed-image {
            opacity: 1;
            left: 0;
        }
        
        /* Custom scrollbar for thumbnail gallery */
        .thumbnail-scroll::-webkit-scrollbar {
            height: 4px;
        }
        .thumbnail-scroll::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        .thumbnail-scroll::-webkit-scrollbar-thumb {
            background: #007D8B;
            border-radius: 10px;
        }
        .thumbnail-scroll::-webkit-scrollbar-thumb:hover {
            background: #006570;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50 font-sans">
   
    <!-- Breadcrumbs -->
    <div class="bg-gradient-to-r from-primary-dark to-primary py-8">
        <div class="container mx-auto px-4">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-2"><%= product.name %></h1>
            <div class="flex items-center text-primary-light">
                <a href="/user/home" class="hover:text-white transition-colors">Home</a>
                <span class="mx-2">/</span>
                <a href="/user/shop" class="hover:text-white transition-colors">Shop</a>
                <span class="mx-2">/</span>
                <span class="text-white"><%= product.name %></span>
            </div>
        </div>
    </div>

    <!-- Product Section -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row gap-8">
            <!-- Product Image Gallery -->
            <div class="md:w-2/5">
                <div class="zoom-container rounded-xl overflow-hidden border border-gray-100 shadow-sm bg-white">
                    <img src="<%= product.mainImage %>" class="w-full h-auto object-contain aspect-square p-4" id="mainProductImage" alt="<%= product.name %>">
                    <div class="zoomed-image" id="zoomedImage"></div>
                </div>
                <div class="flex mt-4 space-x-2 overflow-x-auto pb-2 thumbnail-scroll">
                    <% if (Array.isArray(product.subImages)) { %>
                        <% product.subImages.forEach((image, index) => { %>
                            <div class="min-w-[80px] h-20 rounded-lg overflow-hidden border-2 <%= index === 0 ? 'border-primary' : 'border-transparent' %> hover:border-primary transition cursor-pointer" onclick="changeImage('<%= image %>', this)">
                                <img src="<%= image %>" class="w-full h-full object-cover" alt="Product thumbnail">
                            </div>
                        <% }) %>
                    <% } else if (product.mainImage) { %>
                        <div class="min-w-[80px] h-20 rounded-lg overflow-hidden border-2 border-primary hover:border-primary transition cursor-pointer" onclick="changeImage('<%= product.mainImage %>', this)">
                            <img src="<%= product.mainImage %>" class="w-full h-full object-cover" alt="Product thumbnail">
                        </div>
                    <% } %>
                    
                </div>
                
                <!-- Product Actions for Mobile -->
                <div class="md:hidden mt-6 flex flex-col space-y-3">
                    <div class="flex items-center justify-between bg-primary/5 p-4 rounded-lg">
                        <div>
                            <p class="text-sm text-gray-500">Price:</p>
                            <div class="flex items-center">
                                <% const variant = product.variants[0]; %>
                                <% const discountedPrice = Math.round(variant.regularPrice - (variant.regularPrice * product.offer / 100)); %>
                                <span class="text-2xl font-bold text-primary" id="currentPrice-mobile">₹<%= discountedPrice%></span>
                                <span class="ml-2 text-sm text-gray-500 line-through" id="originalPrice-mobile">₹<%= variant.regularPrice %></span>
                                <span class="ml-2 bg-primary/10 text-primary px-2 py-0.5 rounded-full text-xs font-medium"><%= product.offer %>% off</span>
                            </div>
                        </div>
                        <div class="flex items-center text-sm">
                            <span class="text-green-600 font-medium flex items-center">
                                <i class="fa-solid fa-check mr-1"></i> In Stock
                            </span>
                        </div>
                    </div>
                    
                    <button class="w-full py-3 bg-primary hover:bg-primary-dark text-white font-medium rounded-lg transition flex items-center justify-center" onclick="addtoCart('<%= product._id %>')">
                        <i class="fa-solid fa-cart-plus mr-2"></i> Add to Cart
                    </button>
                    
                    <button class="w-full py-3 bg-primary-dark hover:bg-primary-dark/90 text-white font-medium rounded-lg transition flex items-center justify-center">
                        <i class="fa-solid fa-bolt mr-2"></i> Buy Now
                    </button>
                </div>
            </div>

            <!-- Product Details -->
            <div class="md:w-3/5">
                <div class="bg-white p-6 md:p-8 rounded-xl shadow-sm border border-gray-100">
                    <!-- Product Title and Rating -->
                    <div class="hidden md:block">
                        <h2 class="text-3xl font-bold text-gray-800 mb-2"><%= product.name %></h2>
                        
                        <!-- Rating Section -->
                        <div class="flex items-center mt-2 mb-6">
                            <div class="flex text-amber-400">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star-half-stroke"></i>
                            </div>
                            <span class="ml-2 text-gray-600">4.5 (128 ratings)</span>
                            <span class="mx-2 text-gray-400">|</span>
                            <span class="text-green-600">2,456 sold</span>
                        </div>
                    </div>
                    
                    <!-- Mobile Rating -->
