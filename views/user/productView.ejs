                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star-half-stroke"></i>
                        </div>
                        <span class="ml-2 text-gray-600 text-sm">4.5 (128 ratings)</span>
                    </div>
                    
                    <!-- Price and Stock Section - Desktop Only -->
                    <div class="hidden md:block">
                        <div id="priceSection" class="flex items-center p-4 bg-primary/5 rounded-lg">
                            <% const firstVariant = product.variants[0]; %>
                            <% const firstDiscountedPrice = Math.round(firstVariant.regularPrice - (firstVariant.regularPrice * product.offer / 100)); %>
