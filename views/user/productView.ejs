                            <button class="w-10 h-10 bg-gray-100 rounded-r-lg flex items-center justify-center hover:bg-primary/10 hover:text-primary transition" onclick="incrementQuantity()">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                            
