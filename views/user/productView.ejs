                            <div class="flex items-center mr-4">
                                <i class="fa-solid fa-truck mr-2 text-primary"></i>
                                Free Delivery
                            </div>
                            <div class="flex items-center">
                                <i class="fa-solid fa-shield-halved mr-2 text-primary"></i>
                                Genuine Product
                            </div>
                        </div>
                    </div>
                    
                    <!-- Divider -->
                    <div class="my-6 border-t border-gray-100"></div>
                    
                    <!-- Product Options - Size Selection -->
                    <div>
                        <label class="block text-gray-700 font-medium mb-3">Select Size:</label>
                        <div class="flex flex-wrap gap-3" id="variantSelector">
                            <% product.variants.forEach((variant, index) => { %>
                                <button 
                                    class="px-4 py-2 border-2 <%= index === 0 ? 'border-primary text-primary bg-primary/5' : 'border-gray-200 text-gray-700' %> rounded-lg font-medium hover:border-primary hover:text-primary transition"
                                    onclick="selectVariant('<%= index %>', '<%= variant.regularPrice %>', '<%= Math.round(variant.regularPrice * 1.2) %>', '<%= variant.quantity %>', '<%= variant.size %>')"
                                    data-variant-index="<%= index %>"
                                >
                                    <%= variant.size %>
                                </button>
                            <% }) %>
                        </div>
                    </div>
                    
                    <!-- Quantity Selector -->
