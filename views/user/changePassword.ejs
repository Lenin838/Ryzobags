<form action="/change-password" method="POST" class="p-4 max-w-md mx-auto">
  <h2 class="text-xl font-bold mb-4">Change Password</h2>
  <% if (error) { %><p class="text-red-500"><%= error %></p><% } %>
  <label>Current Password</label>
  <input type="password" name="currentPassword" required class="input">

  <label>New Password</label>
  <input type="password" name="newPassword" required class="input">

  <button type="submit" class="btn mt-4">Change</button>
</form>