<%- include("partials/userHeader") %>
<div class="bg-gray-50 min-h-screen">
  <div class="max-w-3xl mx-auto px-4 py-16 sm:px-6 sm:py-24">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <!-- Success Header -->
      <div class="bg-gradient-to-r from-green-500 to-emerald-600 px-4 py-12 sm:px-6 text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-white mb-5">
          <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-extrabold text-white tracking-tight">Order Confirmed!</h1>
        <p class="mt-2 text-lg text-green-100">Thank you for your purchase</p>
      </div>
      
      <!-- Order Details -->
      <div class="px-4 py-6 sm:px-6 border-b border-gray-200">
        <div class="flex justify-between text-sm font-medium text-gray-900">
          <p>Order #</p>
          <p class="font-semibold">ORD-<%= Math.floor(Math.random() * 10000).toString().padStart(4, '0') %></p>
        </div>
        <div class="mt-2 flex justify-between text-sm font-medium text-gray-900">
          <p>Date</p>
          <p class="font-semibold"><%= new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
        </div>
      </div>
      
      <!-- Order Status -->
      <div class="px-4 py-6 sm:px-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Order Status</h3>
        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-between">
            <div class="flex flex-col items-center">
              <span class="relative flex h-8 w-8 items-center justify-center rounded-full bg-green-500 text-white">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="mt-2 text-xs font-medium text-gray-900">Confirmed</span>
            </div>
            <div class="flex flex-col items-center">
              <span class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 text-gray-600">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </span>
              <span class="mt-2 text-xs font-medium text-gray-500">Processing</span>
            </div>
            <div class="flex flex-col items-center">
              <span class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 text-gray-600">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                </svg>
              </span>
              <span class="mt-2 text-xs font-medium text-gray-500">Shipped</span>
            </div>
            <div class="flex flex-col items-center">
              <span class="relative flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 text-gray-600">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </span>
              <span class="mt-2 text-xs font-medium text-gray-500">Delivered</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Order Summary -->
      <div class="px-4 py-6 sm:px-6 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Order Summary</h3>
        <div class="flex justify-between text-sm font-medium text-gray-900 mb-2">
          <p>Subtotal</p>
          <p>₹<%= (Math.random() * 1000 + 500).toFixed(2) %></p>
        </div>
        <div class="flex justify-between text-sm font-medium text-gray-900 mb-2">
          <p>Shipping</p>
          <p>₹<%= (Math.random() * 100).toFixed(2) %></p>
        </div>
        <div class="flex justify-between text-sm font-medium text-gray-900 mb-2">
          <p>Tax</p>
          <p>₹<%= (Math.random() * 100).toFixed(2) %></p>
        </div>
        <div class="flex justify-between text-base font-semibold text-gray-900 pt-4 border-t border-gray-200">
          <p>Total</p>
          <p>₹<%= (Math.random() * 2000 + 1000).toFixed(2) %></p>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="px-4 py-6 sm:px-6 bg-gray-50 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/user/profile?tab=orders" class="w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          View Orders
        </a>
        <a href="/" class="w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
          Continue Shopping
        </a>
      </div>
      
      <!-- Additional Info -->
      <div class="px-4 py-6 sm:px-6 bg-gray-100 text-center border-t border-gray-200">
        <p class="text-sm text-gray-600">
          A confirmation email has been sent to your registered email address.
        </p>
        <p class="text-sm text-gray-600 mt-1">
          If you have any questions, please contact our 
          <a href="#" class="text-blue-600 hover:text-blue-500 font-medium">customer support</a>.
        </p>
      </div>
    </div>
    
    <!-- Recommendations -->
    <div class="mt-12">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">You might also like</h2>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-md transition-shadow duration-300">
          <div class="h-40 bg-gray-200"></div>
          <div class="p-4">
            <h3 class="text-sm font-medium text-gray-900 truncate">Product Name</h3>
            <p class="mt-1 text-sm text-gray-500">₹499</p>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-md transition-shadow duration-300">
          <div class="h-40 bg-gray-200"></div>
          <div class="p-4">
            <h3 class="text-sm font-medium text-gray-900 truncate">Product Name</h3>
            <p class="mt-1 text-sm text-gray-500">₹599</p>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-md transition-shadow duration-300">
          <div class="h-40 bg-gray-200"></div>
          <div class="p-4">
            <h3 class="text-sm font-medium text-gray-900 truncate">Product Name</h3>
            <p class="mt-1 text-sm text-gray-500">₹799</p>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-md transition-shadow duration-300">
          <div class="h-40 bg-gray-200"></div>
          <div class="p-4">
            <h3 class="text-sm font-medium text-gray-900 truncate">Product Name</h3>
            <p class="mt-1 text-sm text-gray-500">₹899</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/userFooter") %>
