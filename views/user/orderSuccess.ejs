<%- include("partials/userHeader") %>
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mx-auto px-2 sm:px-4 py-8 sm:py-12">
  <div class="max-w-full sm:max-w-md mx-auto text-center">
    <img src="/images/3529856.jpg" alt="Success Illustration" class="w-48 sm:w-64 mx-auto mb-4 sm:mb-6 object-contain">
    <h1 class="text-2xl sm:text-3xl font-bold text-green-600 mb-3 sm:mb-4">Thank You for Your Order!</h1>
    <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">Your order has been successfully placed. You'll receive a confirmation email soon.</p>
    <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4">
      <a href="/user/orderDetails/<%=orderId || '' %>">
        <button class="px-4 sm:px-6 py-1.5 sm:py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors text-sm sm:text-base">
          View Order Details
        </button>
      </a>
      <a href="/user/shop">
        <button class="px-4 sm:px-6 py-1.5 sm:py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors text-sm sm:text-base">
          Continue Shopping
        </button>
      </a>
    </div>
  </div>
</div>

<%- include("partials/userFooter") %>