<form action="/forgot-password" method="POST" class="p-4 max-w-md mx-auto">
    <h2 class="text-xl font-bold mb-4">Forgot Password</h2>
    <% if (error) { %><p class="text-red-500"><%= error %></p><% } %>
    <% if (success) { %><p class="text-green-600"><%= success %></p><% } %>
    <label>Email</label>
    <input type="email" name="email" required class="input">
  
    <button type="submit" class="btn mt-4">Send Reset Link</button>
  </form>