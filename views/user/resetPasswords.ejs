<form action="/reset-password/<%= token %>" method="POST" class="p-4 max-w-md mx-auto">
    <h2 class="text-xl font-bold mb-4">Reset Password</h2>
    <label>New Password</label>
    <input type="password" name="newPassword" required class="input">
  
    <button type="submit" class="btn mt-4">Reset Password</button>
  </form>
  