                  <p class="text-xl font-bold text-primary flex items-center gap-2" id="price-<%= product._id %>">
                    <% if (product.variants && product.variants.length > 0) { %>
                      <% const firstVariant = product.variants[0]; %>
                      <% if (firstVariant.discountedPrice < firstVariant.regularPrice) { %>
                        <span>₹<%= firstVariant.discountedPrice %></span>
                        <span class="text-sm line-through text-gray-500 font-normal">₹<%= firstVariant.regularPrice %></span>
                        <span class="text-sm text-green-600 font-medium">
                          (<%= Math.round(100 - (firstVariant.discountedPrice / firstVariant.regularPrice) * 100) %>% OFF)
                        </span>
                      <% } else { %>
                        ₹<%= firstVariant.regularPrice %>
                      <% } %>
                    <% } else { %>
                      Price not available
                    <% } %>
                  </p>
                </div>
                
                <div class="flex space-x-2">
