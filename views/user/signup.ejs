<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RYZO BAGS - Sign Up</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #a0d8d8;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-4xl flex bg-white rounded-2xl shadow-lg overflow-hidden min-h-[500px]">
        <!-- Left Side - Bag Image (Larger) -->
        <div class="w-1/2 flex items-center justify-center bg-gray-100">
            <img src="/images/3b9b1752dd6a710b33461bc8fbd1c378.jpg" alt="RYZO Bag" class="w-full h-full object-cover">
        </div>
    
        <!-- Right Side - Signup Form -->
        <div class="w-1/2 p-8 flex flex-col justify-center">
            <h1 class="text-2xl font-bold mb-2">RYZO BAGS</h1>
            <h2 class="text-lg text-gray-600 mb-6">Create Account</h2>
            
            <!-- Social Signup -->
            <button id="google-loging" class="w-full flex items-center justify-center border rounded-lg py-2 text-sm hover:bg-gray-50 mb-4">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" class="w-4 h-4 mr-2">
                Sign up with Google
            </button>
    
            <!-- Divider -->
            <div class="flex items-center mb-4">
                <div class="flex-grow border-t"></div>
                <span class="px-3 text-gray-500 text-sm">OR</span>
                <div class="flex-grow border-t"></div>
            </div>

            <!-- Signup Form -->
            <form id="signup-form" class="space-y-3">
                <input type="text" id="full-name" name="fullname" placeholder="Full Name"
                class="w-full px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-400">
                <p class="error-text text-red-500 text-xs"></p>

                <input type="email" id="email" name="email" placeholder="Email Address"
                class="w-full px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-400">
                <p class="error-text text-red-500 text-xs"></p>

                <input type="text" id="phone" name="phone" placeholder="Phone Number"
                class="w-full px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-400">
                <p class="error-text text-red-500 text-xs"></p>

                <input type="password" id="password" name="password" placeholder="Password"
                class="w-full px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-400">
                <p class="error-text text-red-500 text-xs"></p>

                <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirm Password"
                class="w-full px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-teal-400">
                <p class="error-text text-red-500 text-xs"></p>

                <button type="submit"
                    class="w-full bg-teal-400 text-white py-2 rounded-lg text-sm hover:bg-teal-500 transition duration-300">
                    Create Account
                </button>
            </form>

            <div class="text-center mt-3 text-xs text-gray-600">
                Already have an account? <a href="/user/login" class="text-teal-500 hover:underline">Log in</a>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("signup-form").addEventListener("submit", async function (event) {
            event.preventDefault();
            const formData = Object.fromEntries(new FormData(this).entries());
    
            // Clear previous error messages
            document.querySelectorAll(".error-text").forEach(el => el.textContent = "");
    
            try {
                const response = await fetch("/user/verify", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData),
                    credentials: 'include'
                });
    
                const result = await response.json();
    
                if (response.ok) {
                    showToast(result.message, "success");
                    setTimeout(() => {
                        window.location.href = result.redirecturl;
                    }, 2000);
                } else {
                    if (result.errors) {
                        for (const field in result.errors) {
                            const input = document.querySelector(`[name="${field}"]`);
                            if (input) {
                                let errorEl = input.nextElementSibling;
                                if (!errorEl || !errorEl.classList.contains("error-text")) {
                                    errorEl = document.createElement("p");
                                    errorEl.className = "error-text text-red-500 text-xs mt-1";
                                    input.parentNode.insertBefore(errorEl, input.nextSibling);
                                }
                                errorEl.textContent = result.errors[field];
                            }
                        }
                    } else {
                        showToast(result.message || "Registration failed", "error");
                    }
                }
            } catch (error) {
                showToast("Network error. Please try again.", "error");
            }
        });
        function showToast(message, type) {
        const toastContainer = document.getElementById("toast-container");
        if (!toastContainer) {
            const div = document.createElement("div");
            div.id = "toast-container";
            div.className = "fixed top-5 right-5 flex flex-col space-y-2 z-50";
            document.body.appendChild(div);
        }

        const toast = document.createElement("div");
        toast.className = `px-4 py-2 rounded-lg text-white text-sm shadow-lg transition-opacity duration-300 ${
            type === "success" ? "bg-green-500" : "bg-red-500"
        }`;
        toast.textContent = message;

        document.getElementById("toast-container").appendChild(toast);

        setTimeout(() => {
            toast.style.opacity = "0";
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }
    document.getElementById('google-loging').addEventListener('click', () => {
    window.location.href = '/auth/google';
});
      </script>
</body>
</html>